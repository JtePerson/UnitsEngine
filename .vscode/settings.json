{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.compileCommands": [
    "${workspaceFolder}/out/build/${command:cmake.activeConfigurePresetName}/compile_commands.json"
  ],
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.default.enableConfigurationSquiggles": true,
  "cmake.useCMakePresets": "always",
  "cmake.configureOnOpen": true,
  "cmake.configureOnEdit": true,
  "cmake.useVsDeveloperEnvironment": "always",
  "cmake.options.statusBarVisibility": "icon",
  "files.associations": {
    ".clang-format": "yaml"
  }
}